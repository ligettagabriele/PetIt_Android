<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- inherit from the AppCompat theme -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#009636</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#007731</item>
    </style>


    <style name="Buttons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#7bc82c</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_margin">5dip</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">5dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <!-- switch -->

    <style name="SwitchStyle" parent="AppCompatTheme">
        <item name="android:thumb">@drawable/ic_pallina_switch</item>
        <item name="android:switchTextOff">""</item>
        <item name="android:switchTextOn">""</item>

    </style>


    <!--tema splashscreen-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--MENU IMPOSTAZIONI-->
    <style name="LayoutStyleSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="TextViewSettingsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingLeft">40sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Style Elementi Feed -->

    <style name="FeedTextViewNome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FeedTextViewDescrizione">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
