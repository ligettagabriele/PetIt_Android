<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- inherit from the AppCompat theme -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#009636</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#007731</item>
    </style>


    <style name="Buttons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#7bc82c</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_margin">5dip</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <!--tema splashscreen-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash</item>
    </style>


</resources>
