<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AggiungiSegnalazione">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/intestazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="50dp">

            <ImageView
                android:id="@+id/immagineProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round" />


            <LinearLayout
                android:layout_width="332dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="79dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toEndOf="@+id/immagineProfilo"
                    android:paddingTop="8dp"
                    android:text="Nome Utente"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/immagineProfilo"
                    android:text="latuaemail@email.com" />

            </LinearLayout>


        </RelativeLayout>


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intestazione"
            android:layout_centerHorizontal="true"
            android:columnCount="2">

            <Button
                android:id="@+id/button1"
                style="@style/Buttons"
                android:layout_width="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button2"
                style="@style/Buttons"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                style="@style/Buttons"
                android:text="Button" />

            <Button
                android:id="@+id/button4"
                style="@style/Buttons"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                style="@style/Buttons"
                android:text="Button" />

            <Button
                android:id="@+id/button6"
                style="@style/Buttons"
                android:text="Button" />

        </GridLayout>

        <!--  <ListView

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

          </ListView> -->


    </RelativeLayout>
</ScrollView>